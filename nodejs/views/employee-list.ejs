<!DOCTYPE html>
<html lang="en">
<head>
  <title>Employee Database</title>
</head>
<body>
    <div class="table-data">
	<h2>Employee Database - Served by <%=hname; %> </h2>
    <table border="5">        <tr>
            <th>Employee ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email Address</th>
            <th>City</th>
            <th>Delete</th>
        </tr>

        <%
        if(dbRows.length!=0){
        var i=1;
        dbRows.forEach(function(data){
        %>
        <tr>
            <td><%=data.empID; %></td>
            <td><%=data.FirstName %></td>
            <td><%=data.LastName %></td>
            <td><%=data.Email %></td>
            <td><%=data.City %></td>
            <td>
		<form action="/deleteEmployee">
			<input type="text" hidden name="empID" value=<%=data.empID; %>>
			<button>Delete</button>
		</form>
	    </td>
        </tr>
        <%  i++; }) %>
        <% } else{ %>
            <tr>
                <td colspan="7">No Data Found</td>
            </tr>
        <% } %>
    </table>
    </div>

<h2> Add Employee </h2>
<form action="/addEmployee" method="POST">
<table border="5">
   <tr>
        <td>
        <label>First Name: </label>
        </td>
        <td>
        <input type="text" placeholder="First Name" name="fname">
        </td>
   </tr>
   <tr>
        <td>
        <label>Last Name: </label>
        </td>
        <td>
        <input type="text" placeholder="Last Name" name="lname"><br><br>
        </td>
   </tr>
    <!-- Creating the parameter Email as type= "text"-->
   <tr>
        <td>
        <label>Email: </label>
        </td>
        <td>
        <input type="email" placeholder="Email" name="email"><br><br>
        </td>
   </tr>
   <tr>
        <td>
        <label>City: </label>
        </td>
        <td>
        <input type="text" placeholder="City" name="city"><br><br>
        </td>
   </tr>
    <!-- Creating the submit button -->
   <tr>
        <td colspan="2">
        <button>Add This Employee</button>
        </td>
   </tr>
</table>
</form>

</body>
</html>
